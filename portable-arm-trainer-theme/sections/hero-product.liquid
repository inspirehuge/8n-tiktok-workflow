      "default": "‚úì No Noise - Use Anywhere",
      "label": "Benefit 1"
    },
    {
      "type": "text",
      "id": "benefit_2", 
      "default": "‚úì Works on Any Surface",
      "label": "Benefit 2"
    },
    {
      "type": "text",
      "id": "benefit_3",
      "default": "‚úì Build Muscle Fast", 
      "label": "Benefit 3"
    },
    {
      "type": "text",
      "id": "benefit_4",
      "default": "‚úì Portable & Compact",
      "label": "Benefit 4"
    },
    {
      "type": "text",
      "id": "cta_text",
      "default": "Get Yours Now - $29.99",
      "label": "CTA Button Text"
    },
    {
      "type": "text",
      "id": "cta_link",
      "default": "#buy-now",
